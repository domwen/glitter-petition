<div id="mainContainer">
    <h2 style="margin-top: 40px;">Here You Can Find All The People
        <a style="color: red;">({{count}})</a>
        Who Have Already Signed!</h2>
    <ul class="list">

    {{#each signers}}

        {{#if homepage}}

            <li><a href="/{{homepage}}">{{first}} {{last}}</a>,  {{age}},  <a href="{{city}}">{{city}}</a></li>

            {{else}}

                <li>{{first}} {{last}},  {{age}},  <a href="{{city}}">{{city}}</a></li>

        {{/if}}

    {{/each}}

    </ul>


</div>
